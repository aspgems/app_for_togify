<body>
    <div id="container">

        <div id="header" class="clearfix">
            <div id="header_content">


            </div> <!-- /#header_content -->
        </div>  <!-- /#header -->





        <div id="pagebody" class="clearfix">
            <div id="side_bar">
                <div id="user_menu">
                  <% if logged_in? -%>
                    <div class="user_info clearfix">
                        <div class="titulo"><%= current_user.login %></div>
                    </div>
                    <ul class="clearfix">
                      <li class="bookmarks"><a href="#"><span>Mis favoritos</span></a></li>
                      <li class="bookmarks"><span><%= link_to  content_tag(:span, "Log out"), logout_path, { :title => "Log out" } %></span></li>
                    </ul>
                  <% else -%>
                    <div class="user_info clearfix">
                        <div class="titulo">Not logged in</div>
                    </div>
                    <ul class="clearfix">
                      <li class="bookmarks"><span><%= link_to content_tag(:span, "Log in"),  login_path,  { :title=> "Log in" } %></span></li>
                      <li class="bookmarks"><span><%= link_to content_tag(:span, "Sign up"), signup_path, { :title => "Create an account" } %></span></li>
                    </ul>
                  <% end -%>
                </div>
            </div> <!-- /#side_bar -->


            <div id="mainarea" class="clearfix">
                <div id="mainarea_content">
                    <div id="mainarea_header" class="clearfix">
                        <%= yield :header %>
                        <br/>
                    </div> <!-- /#pagebody_header -->
                    <div class="mainarea_mailcols clearfix">
                      <%= yield %>
                        <div class="mainarea_sidebar">
                          <%= yield :sidebar %>
                        </div> <!-- /.mainarea_sidebar -->
