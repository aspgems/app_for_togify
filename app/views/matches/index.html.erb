<% content_for :header do %>
  <div class="maintitle">Proximos partidos</div>
  <div class="mainsubtitle">La liga este a√±o esta que arde...</div>
<% end %>


<% mds = @matches.group_by(&:match_date) %>

<% for match_day in mds.keys %>
  <div class="titleA"><%=h match_day %></div>
  <br />

  <table>
    <% for match in mds[match_day] %>
      <tr>
        <td><%=h match.local.name %> </td>
        <td><%=h match.local_score %> - <%=h match.visitor_score %></td>
        <td><%=h match.visitor.name %></td>
        <td><%= link_to 'Show', match %></td>
      </tr>
    <% end %>
  </table>

  <hr class="wide" />
  <br />



<% end %>

